<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="550dp">
    <ImageView
        android:layout_marginLeft="100dp"
        android:background="@drawable/book"
        android:layout_width="200dp"
        android:layout_height="100dp"/>
    <TextView
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập mã sách"/>

    <EditText
        android:id="@+id/edtMaSach"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="113dp"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck" />
    <TextView
        android:layout_marginTop="160dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập tên sách"/>

    <EditText
        android:id="@+id/edtTenSach"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="168dp"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:layout_marginTop="215dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập giá thuê"/>

    <EditText
        android:inputType="number"
        android:id="@+id/edtGiaThueSach"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="228dp"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:layout_marginTop="275dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã loại sách"/>

    <Spinner
        android:id="@+id/spinnermaloaisach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="308dp"
        tools:ignore="SpeakableTextPresentCheck" />
    <TextView
        android:layout_marginTop="335dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập số lượng"/>

    <EditText
        android:inputType="number"

        android:id="@+id/edtsoLuong"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="338dp"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck" />
    <Button
        android:id="@+id/btnThemSach"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="390dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm"/>
</RelativeLayout>